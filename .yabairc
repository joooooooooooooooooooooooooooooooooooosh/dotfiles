yabai -m config layout bsp
yabai -m config focus_follows_mouse autofocus
yabai -m config mouse_follows_focus on

padding_size=5
yabai -m config top_padding    $padding_size
yabai -m config bottom_padding $padding_size
yabai -m config left_padding   $padding_size
yabai -m config right_padding  $padding_size
yabai -m config window_gap     $padding_size

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Google Chrome$" title="Activate Touch ID - Google Chrome" manage=off
yabai -m rule --add app="^Google Chrome$" title="Activate Touch ID - Google Chrome (Incognito)" manage=off opacity=0.1
yabai -m rule --add title="Scratchpad" manage=off

yabai -m config window_topmost on
yabai -m config window_shadow float

yabai -m config window_border                on
yabai -m config window_border_width          1
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f
