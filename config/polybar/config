[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color4:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color6:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/example]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 2.9%
; offset-x = 1%
; offset-y = 1%
; radius = 8
fixed-center = true
enable-ipc = true
bottom = false
separator = " "

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

; TODO: add unicode (mostly for player)
font-0 = moreicons:style=Regular:size=13;3
font-1 = policons:style=Regular:size=13;3
font-2 = Nimbus Sans:style=Regular:size=11;3.5
; font-2 = Source Code Pro for Powerline:size=11;3.5
; font-2 = OTF:Inconsolata Nerd Font Mono:size=11:style=Medium;3.5
; font-2 = siji:size=11:style=Regular;3

modules-left = i3 pulseaudio player split
modules-center = polywins
; modules-center = xwindow
modules-right = aslr aur brightness micvolume filesystem memory cpu newbattery wlan date power

tray-position = none
tray-padding = 2
tray-detached = true
tray-transparent = true

[module/split]
type = custom/script
exec = ~/Documents/code/i3-alternating-layout/bin/python -u ~/Documents/code/i3-alternating-layout/alternating_layouts.py
tail = true

[module/aslr]
type = custom/script
exec = echo ASLR off
exec-if = grep 0 /proc/sys/kernel/randomize_va_space 
format-foreground = ${colors.foreground-alt}
interval = 10

[module/brightness]
; TODO: change 4285 to be taken from max_brightness
type = custom/ipc
hook-0 = bc -l <<< "scale=3; `cat /sys/class/backlight/intel_backlight/brightness` / 4285 * 100" | sed 's/\..*/%/g'
initial = 1
format-prefix = " "
click-left = sudo ~/Documents/scripts/brightchange.sh down
click-right = sudo ~/Documents/scripts/brightchange.sh up
scroll-up = sudo ~/Documents/scripts/brightchange.sh up
scroll-down = sudo ~/Documents/scripts/brightchange.sh down

[module/power]
type = custom/ipc
hook-0 = echo ""
initial = 1
click-left = qdbus org.kde.ksmserver /KSMServer org.kde.KSMServerInterface.logout -1 -1 -1
click-right = systemsettings5

[module/aur]
type = custom/script
exec = cat ~/polybar-scripts/.polybar-aur
click-left = ~/Documents/scripts/toggleupdates.sh
click-right = alacritty --hold -e zsh -ic 'yay -Syu --answerclean None --answerdiff None --answeredit None --answerupgrade None; echo Installation finished'
interval = 10

[module/micvolume]
type = custom/script
exec = ~/Documents/scripts/microphone.sh 2>/dev/null
tail = true
click-left = pulseaudio-ctl mute-input && ~/Documents/scripts/updatemic.sh
click-right = systemsettings5 kcm_pulseaudio
scroll-up = amixer -D pulse set Capture 5%+ && ~/Documents/scripts/updatemic.sh
scroll-down = amixer -D pulse set Capture 5%- && ~/Documents/scripts/updatemic.sh

[module/polywins]
type = custom/script
exec = ~/Documents/code/polywins/polywins.sh $MONITOR 2>/dev/null
tail = true

[module/player]
type = custom/script
exec = ~/polybar-scripts/player-mpris-tail.py -f ' {:t40:{title}:} %{A1:~/polybar-scripts/player-mpris-tail.py previous:}  %{A} %{A1:~/polybar-scripts/player-mpris-tail.py play-pause:} {icon} %{A} %{A1:~/polybar-scripts/player-mpris-tail.py next:}  %{A}' --icon-playing  --icon-paused 
tail = true
format-underline = #1db954
format-margin = 1

[module/newbattery]
type = custom/script
exec = ~/polybar-scripts/battery.sh
interval = 15
format-underline = #ffb52a

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/xkeyboard]
