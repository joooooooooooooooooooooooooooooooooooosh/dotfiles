[module/filesystem]
type = internal/fs
interval = 60

mount-0 = /
format-mounted =%{A1:i3-msg exec "alacritty -e zsh -ic ranger":}<label-mounted>%{A}
; label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
