
# window frame configurations
set window-height 3000
set window-width 1000
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10
set window-title-page true
set guioptions vc

# set scrolling options
set scroll-step 40

# font size
set font "Source Code Pro 13"

# clipboard configurations
set selection-clipboard clipboard

# mappings

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# ----- colour config ----- 
set notification-error-bg "{color0}"
set notification-error-fg "{color3}"
set notification-warning-bg "{color0}"
set notification-warning-fg "{color3}"
set notification-bg "{color0}"
set notification-fg "{color3}"
set completion-group-bg "{color0}"
set completion-group-fg "{color9}"
set completion-bg "{color0}"
set completion-fg "{color7}"
set completion-highlight-bg "{color9}"
set completion-highlight-fg "{color0}"
set inputbar-bg "{color0}"
set inputbar-fg "{color7}"
set statusbar-bg "{color0}"
set statusbar-fg "{color7}"
set highlight-color "{color9}"
set highlight-active-color "{color2}"
set default-bg "{color0}"
set default-fg "{color7}"
set recolor-lightcolor "{color0}"
set recolor-darkcolor "{color7}"
set index-bg "{color0}"
set index-fg "{color7}"
set index-active-bg "{color9}"
set index-active-fg "{color0}"
set recolor true

# Bonus Mappings
map ; focus_inputbar :
